---
import CheckIn from "../../components/CheckIn.jsx";
import BaseLayout from "../../layouts/BaseLayout.astro";

// Get the event ID from the URL parameters  
const { eventId } = Astro.params;

// Generate static paths for common event IDs, but allow dynamic routing
export async function getStaticPaths() {
  // Return empty array to allow all paths to be generated on-demand
  // This works because the CheckIn component handles the API calls client-side
  return [];
}
---

<BaseLayout>
  <CheckIn eventId={parseInt(eventId)} client:load />
</BaseLayout>