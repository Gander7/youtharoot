# Youth Attendance Platform Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_TYPE=memory
# DATABASE_URL=postgresql://username:password@localhost/youth_attendance
# DEV_DATABASE_URL=postgresql://localhost/youth_attendance_dev

# Application Configuration
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-please-make-it-long-and-random

# Admin User Configuration (for initial setup)
ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your-secure-admin-password

# SMS Configuration (Twilio)
# Get these from your Twilio Console: https://console.twilio.com/
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token_here
# TWILIO_PHONE_NUMBER=+1234567890

# SMS Rate Limiting and Cost Control
# Default: 200 messages/hour (good for ~112 youth + leaders)
# SMS_MAX_MESSAGES_PER_HOUR=200

# Cost tracking (current Twilio SMS rate)
# SMS_COST_PER_MESSAGE=0.0075

# Example configurations by group size:
# Small group (30 people): SMS_MAX_MESSAGES_PER_HOUR=50
# Medium group (100 people): SMS_MAX_MESSAGES_PER_HOUR=200
# Large group (500 people): SMS_MAX_MESSAGES_PER_HOUR=1000